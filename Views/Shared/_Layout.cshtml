<script type="text/javascript">
    function logout() {
        var result = confirm("Are you sure you want to Logout?");
        if (result == true) {
            window.location.href = "/fLogin/HomePage"
        }
    }

    function openNav() {
        var el = document.getElementById("mySidenav1");
        if (el.style.width == "250px") {
            el.style.width = "0px";
        } else {
            el.style.width = "250px";
        }
        //document.getElementById("mySidenav1").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("mySidenav1").style.width = "0";
    }


    $(document).ready(function () {
        var IsNull = '@Session["Username"]' === null;
        var IsNull2 = '@Session["Username"]' === '';
        if (IsNull == true || IsNull2 == true) {
            $("#kk").css("display", "none")
            $("#mak").css("display", "none")
            $("#yap").css("display", "none")
            $("#key").css("display", "none")
            $("#key1").css("display", "none")
            $("#key2").css("display", "none")
            $("#key3").css("display", "none")
            $("#key4").css("display", "none")
            $("#key5").css("display", "none")
        }
        else {
            $("#signup").css("display", "none")
            $("#blog").css("display", "none")
            $("#key6").css("display", "none")
            $("#key7").css("display", "none")
            $("#key8").css("display", "none")
        }
    });

</script>