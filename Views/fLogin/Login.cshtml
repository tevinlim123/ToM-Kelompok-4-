<script>
    function myFunction() {
        var x = document.getElementById("myinput");
        if (x.type == "password") {
            x.type = "text";
        }
        else {
            x.type = "password"
        }
    }

    function sbt() {
        debugger
        var Name = $("#txtname").val();
        var Password = $("#myinput").val();

        $.ajax({
            url: "/fLogin/Verify",
            data: { UserName: Name, Password: Password },
            type: "POST",

            success: function (data) {
                if (data.success == true) {
                    debugger
                    var UserName = data.data[0].UserName;
                    var Address = data.data[0].Address;
                    var Email = data.data[0].Email;

                    $.ajax({
                        url: "/fLogin/setSession",
                        data: { UserName: UserName, Address: Address, Email: Email},
                        type: "POST",
                        success: function (data) {
                            if (data == "Login Success") {
                                window.location.href = "/fHome/HomeIndex";
                                alert('Login Successfully');
                            }

                        }
                    });
                }
                else {
                    alert('Your Username and Password is Incorrect');
                }

            },
            //error: function (xhr) {
            //    alert('error');
            //}

        });
    }




</script>