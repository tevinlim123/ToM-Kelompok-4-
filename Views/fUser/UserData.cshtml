<script type="text/javascript">
        var edit = false;
        var DateofBirth = $("#a").val() + "/" + $("#b").val() + "/" + $("#c").val();
        var gender = $("input[name='gendar']").val();
        function back() {
        window.location.href = "/fLogin/HomePage"
         }
        function pswedit() {
            debugger
            var checkvalidation = false;
            var Username = document.getElementById("txtname").value;

            if (Username != "") {
                document.getElementById("sectiontohide2").style.display = "none";
            }
            else if (Username == "") {
