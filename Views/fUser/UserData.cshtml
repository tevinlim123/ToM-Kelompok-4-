            }
            var pass = document.getElementById("psw").value;
            var pass1 = document.getElementById("psw1").value;
            if (pass != "" && pass1 != "") {
                document.getElementById("sectiontohide15").style.display = "none";
            }
            else if (pass == "" && pass1 == "") {
                checkvalidation = true;
                document.getElementById("sectiontohide15").style.display = "block";
            }

            return checkvalidation;
        }

        function save() {
        debugger
            if (pswedit() != true && checkpsw() != true) {

                var Username = $("#txtname").val();
                var Password = $("#psw").val();
                var gender = $("input[name='gendar']").val();
                var Email = $("#txtemail").val();
                var Address = $("#txtaddress").val();
                var PhoneNumber = $("#txtnum").val();
                var DateofBirth = $("#a").val() + "/" + $("#b").val() + "/" + $("#c").val();
                var url = "/fUser/SaveData";


                $.ajax({
                    url: url,
                    data: { Username: Username, Password: Password, Address: Address, Email: Email, gender: gender, PhoneNumber: PhoneNumber, DateofBirth: DateofBirth, edit: edit },
                    type: "GET",
                    async: false,
                    success: function (data) {
                        if (data.success == true) {
                            alert(data.message)
                            window.location.href = "/flogin/login";
                        }
                        else {
                            alert(data.message)
                        }
                    }
                });
            }

        }

