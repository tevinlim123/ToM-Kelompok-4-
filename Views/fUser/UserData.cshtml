</head>
<body>
    <div class="wrapper">
        <h2>
            Sign Up
        </h2>
        <form method="POST">
            <h4>
                Profile
            </h4>
            <div id="sectiontohide2" style="display:none; color:indianred">Please input your Username.</div>
            <div class="input-group" onchange="oo()">
                <div class="input-box">
                    <input type="text" id="txtname" placeholder="User Name" autocomplete="off" required class="name">
                    <i class="fa fa-user icon"></i>
                </div>
                </div>
            <div id="sectiontohide15" style="display:none; color:indianred">Please check your Password again.</div>
            <div class="input-group">
                @*<div class="input-box">
                    <input type="email" placeholder="Email Adress" required class="name">
                    <i class="fa fa-envelope icon"></i>
                </div>*@
                <div class="input-box">
                    <input type="password" id="psw" placeholder="Password" autocomplete="off" onchange="oo()" required class="name">
                    <i class="fas fa-lock icon"></i>
                </div>
                <div class="input-box">
                    <input type="password" id="psw1" placeholder="Confirm Password" autocomplete="off" onchange="oo()" required class="name">
                    <i class="fas fa-lock icon"></i>
                </div>
            </div>
      
            <div class="input-group">
                <div class="input-box">
                    <h4>
                        Date of Birth
                    </h4>
                        @*<input type="date" id="date" placeholder="Date" required class="name">*@
                        <input type="text" id="a" placeholder="DD" autocomplete="off" onchange="oo()" class="dob">
                        <input type="text" id="b" placeholder="MM" autocomplete="off" onchange="oo()" class="dob">
                        <input type="text" id="c" placeholder="YYYY" autocomplete="off" onchange="oo()" class="dob">
                </div>
                <div class="input-box">
                    <h4>
                        Gender
                    </h4>
                    <input type="radio" id="b1" name="gendar" value="Male"  checked class="radio">
                    <label for="b1">Male</label>
                    <input type="radio" id="b2" name="gendar" value="Female" class="radio">
                    <label for="b2">Female</label>
                    
                </div>
            </div>
            <div id="sectiontohide12" style="display:none; color:indianred">Please input your Date of Birth.</div>

            <div class="input-group">
                <div class="input-box">
                    <h4>
                        Details
                    </h4>
                    <div id="sectiontohide7" style="display:none; color:indianred">Please input your Email.</div>
                    <div class="input-box">
                      <input type="email" id="txtemail" placeholder="Email Adress" autocomplete="off" onchange="oo()" required class="name">
                   <i class="fa fa-envelope icon"></i>
                 </div>
                </div>
            </div>
            <div id="sectiontohide4" style="display:none; color:indianred">Please input your Address.</div>
            <div class="input-group">
                <div class="input-box">
                    <input type="text" id="txtaddress" placeholder="Address" onchange="oo()" autocomplete="off" required class="name">
                    <i class="fa fa-home icon"></i>
                </div>
            </div>
            <div id="sectiontohide5" style="display:none; color:indianred">Please input your Phone Number.</div>
            <div class="input-group">
                <div class="input-box">
                    <input type="number" id="txtnum" placeholder="Phone Number" autocomplete="off" onchange="oo()" required class="name">
                    <i class="fa fa-user icon"></i>
                </div>
            </div>
            <div class="input-group">
                <div class="input-box">
                    <button type="button" onclick="save()">Submit</button>
                </div>
                <div class="input-box">
                    <button onclick="back()" type="button">Back</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>

